{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "outDir": ".moon/cache/types",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "lib": ["ESNext"],
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "noPropertyAccessFromIndexSignature": true,
    "typeRoots": []
  },
  "include": ["**/*"],
  "exclude": ["projects/", "node_modules/"]
}
